{
  "name": "combine-class-names",
  "version": "1.1.0",
  "description": "A simple utility for combining classNames into a list.",
  "keywords": [
    "css",
    "class",
    "classes",
    "classname",
    "classnames",
    "util",
    "utility"
  ],
  "license": "MIT",
  "author": "ricky",
  "repository": {
    "type": "git",
    "url": "https://github.com/rickkky/combine-class-names"
  },
  "main": "dist/index.js",
  "module": "dist/combine-class-names.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build --format umd,cjs,esm",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "commit:cz": "git-cz",
    "release": "standard-version"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/jest": "^24.0.20",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "husky": "^3.0.9",
    "pretty-quick": "^2.0.1",
    "standard-version": "^7.0.0",
    "tsdx": "^0.10.5",
    "tslib": "^1.10.0",
    "typescript": "^3.6.4"
  }
}
